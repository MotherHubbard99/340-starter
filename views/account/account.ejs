<% if (notice && notice.length> 0) { %>
    <div class="flash-message">
        <p>
            <%= notice[0] %>
        </p>
    </div>
    <% } %>

<div class="account-dashboard">
    <h1>Account Management</h1>
    
    <% if (accountData) { %>
        <h2>Welcome <% accountData.account_firstname %></h2>

        <!-- UPDATE ACCOUNT INFO LINK (visible to all) -->
        <p>
            <a href="/account/update/<% accountData.account_id %>">Update Account Information</a>
        </p>
        <!-- Inventory Management Section (only for Employee/Admin access) -->
        <% if (accountData.account_type =="Employee" || accountData.account_type =="Admin" ) { %>
            <h3>Inventory Management</h3>
            <p>
                <a href="/inv/">Access Inventory Management</a>
            </p>
            <% } %>
        <% } else { %>
            <p>Please log in to view your account.</p>
        <% } %>

</div>