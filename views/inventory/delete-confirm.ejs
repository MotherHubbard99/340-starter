<% if (message && Array.isArray(message)) { %>
    <ul class="flash-message">
        <% message.forEach(msg=> { %>
            <li>
                <%= msg %>
            </li>
            <% }) %>
    </ul>
    <% } else if (message) { %>
        <p class="flash-message">
            <%= message %>
        </p>
        <% } %>

<h1>Delete Vehicle</h1>
<h2>ALL FIELDS ARE REQUIRED!</h2>

<div class="deleteInv">
    <Delete Inventory>
    <h2>Confirm the DELETION of this vehicle.</h2>
    <p>WARNING: This deletion is permanent!</p>

    <form action="/inv/delete/<%= inv_id %>"  method="post" id="deleteForm" input type="hidden" name ="inv_id" value="<%= inv_id %>">
        <label for="classification_id">Choose a Classification</label>
            <%- classificationList %>

        <label for="inv_make">Make</label>
        <input type="text" name="inv_make" id="inv_make" value="<%= inv_make %>" readonly>

        <label for="inv_model">Model</label>
        <input type="text" name="inv_model" id="inv_model" value="<%= inv_model %>" readonly>

        <label for="inv_year">Year</label>
        <input type="text" name="inv_year" id="inv_year" value="<%= inv_year %>" readonly>
        
        <label for="inv_price">Price</label>
        <input type="number" name="inv_price" id="inv_price" value="<%= inv_price %>" readonly>

        <button type="submit" id="editClassBtn">Delete Vehicle</button>
        <input type="hidden" 
        name="inv_id" 
        <% if(locals.inv_id) { 
            %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>
